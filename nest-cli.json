{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "microservices/my-ecommerce-monorepo/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "microservices/my-ecommerce-monorepo/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "microservices/my-ecommerce-monorepo",
  "projects": {
    "common-auth": {
      "type": "library",
      "root": "libs/common-auth",
      "entryFile": "index",
      "sourceRoot": "libs/common-auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common-auth/tsconfig.lib.json"
      }
    },
    "my-ecommerce-monorepo": {
      "type": "application",
      "root": "microservices/my-ecommerce-monorepo",
      "entryFile": "main",
      "sourceRoot": "microservices/my-ecommerce-monorepo/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/my-ecommerce-monorepo/tsconfig.app.json"
      }
    },
    "order-service": {
      "type": "application",
      "root": "microservices/order-service",
      "entryFile": "main",
      "sourceRoot": "microservices/order-service/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/order-service/tsconfig.app.json"
      }
    },
    "payment-service": {
      "type": "application",
      "root": "microservices/payment-service",
      "entryFile": "main",
      "sourceRoot": "microservices/payment-service/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/payment-service/tsconfig.app.json"
      }
    },
    "product-service": {
      "type": "application",
      "root": "microservices/product-service",
      "entryFile": "main",
      "sourceRoot": "microservices/product-service/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/product-service/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "user-service": {
      "type": "application",
      "root": "microservices/user-service",
      "entryFile": "main",
      "sourceRoot": "microservices/user-service/src",
      "compilerOptions": {
        "tsConfigPath": "microservices/user-service/tsconfig.app.json"
      }
    }
  }
}